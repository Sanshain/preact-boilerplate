{
    "compilerOptions": {
        "target": "ES2016",
        "outDir": "built",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "customMatcher": "\\.(c|le)ss$"
                }
            }
        ],
    },
    "include": [
        // "./source/**/*.ts",
        // "./source/**/*.js",
        // "./source/**/*.jsx",
        // "./source/**/*.tsx",
        // "./source/**/*.css"
        "./src/**/*"
    ]
}