{
    "compilerOptions": {
        "outDir": "built",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "allowJs": true,
        "esModuleInterop": true,

        // to preact/compat (https://preactjs.com/guide/v10/typescript/#typescript-preactcompat-configuration):
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react/jsx-runtime": [
                "./node_modules/preact/jsx-runtime"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ],
            "react-dom/*": [
                "./node_modules/preact/compat/*"
            ]
        },
        "plugins": [
            // {
            //     "name": "typescript-plugin-css-modules",
            //     "options": {
            //         "classnameTransform": "dashes",
            //         "customMatcher": "\\.(c|le)ss$",
            //         // "customRenderer": "./myRenderer.js",
            //         "dotenvOptions": {},
            //         "postcssOptions": {},
            //         "rendererOptions": {}
            //     }
            // }
        ],        
    },
    "include": [
        // "./source/**/*.ts",
        // "./source/**/*.js",
        // "./source/**/*.jsx",
        // "./source/**/*.tsx",
        // "./source/**/*.css"
        "./src/**/*"
    ]
}