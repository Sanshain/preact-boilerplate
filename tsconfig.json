{
	"compilerOptions": {
		"outDir": "built",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"allowJs": true,
		"esModuleInterop": true,		
		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"classnameTransform": "dashes",
					"customMatcher": "\\.css$",
					// "customMatcher": "\\.module\\.css$", // <- attension. This value is prescribed by default!
					// "customRenderer": "./myRenderer.js",
					"dotenvOptions": {},
					"postcssOptions": {},
					"rendererOptions": {}
				}				
			}
		]
	},
	"include": [
		"./source/**/*"
	]
}